<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">

    <style>
        body {
            background-color: black;
            font-family:'Times New Roman', Times, serif;
        }

        .login {
            background-color: #0F2C59;
            color: #fff;
            padding: 20px;
            border-radius: 30px;
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            width: 35%;
        }
        h1{
            color:white;
            text-align: center;
            padding-top: 40px;
        }
        .password-toggle {
            color:black;
            cursor: pointer;
            position: absolute;
            right: 10px;
            top: 50%;
            transform: translateY(-50%);
        }
        
        .signup-btn {
            position: absolute;
            top: 20px;
            right: 20px;
        }
    </style>
</head>
<% if(locals.error)  {%>
    <div class="alert alert-danger" role="alert">
        <%= locals.error %>
      </div>
    <% } %>
    <% if(locals.success)  {%>
        <div class="alert alert-success" role="alert">
            <%= locals.success %>
          </div>
        <% } %>
<body>
    <h1>URL Shortener Login</h1>
    <a href="/signup"><button type="button" class="btn btn-primary signup-btn">Signup</button></a>
    
    <div class="login">
        <h3 class="text-center mb-4">Login</h3>
        <form class="login-form" id="userLoginForm" action="/user/login" method="post">
            <div class="mb-3">
                <label for="username" class="form-label">Email ID</label>
                <input type="text" class="form-control" id="username" placeholder="Email ID" name="email" required>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <div class="position-relative">
                    <input type="password" class="form-control" id="password" placeholder="Password" name="password" required>
                    <i class="fas fa-eye password-toggle" id="togglePassword"></i>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Login</button>
        </form>
    </div>

    <script>
        const togglePassword = document.getElementById('togglePassword');
        const passwordField = document.getElementById('password');
        passwordField.setAttribute('type', 'password');
        togglePassword.classList.add('fa-eye-slash');
        togglePassword.addEventListener('click', function() {
            const type = passwordField.getAttribute('type') === 'password' ? 'text' : 'password';
            passwordField.setAttribute('type', type);

            this.classList.toggle('fa-eye-slash');
        });
    </script>
</body>
</html>
